#:kivy 1.8.0

<TextWidget>:
    FloatLayout:
        id: display

        Scatter:
            pos: root.display_pos[0], root.display_pos[1]
            size_hint: None, None
            size: sign_text.size
            on_pos: root.display_pos = self.pos

            Label:
                id: sign_text
                center: self.center
                text: unicode(root.display_text)
                font_size: root.font_size[1]
                size: self.texture_size
                color: root.display_color
                            
        Button:
            id: popup
            text: "+"
            background_color: 0,0,0,0
            font_size: root.height / 10
            color: .5, .5, .5, .5
            size_hint: None, None
            height: ((root.height / 10) + 10)
            width: ((root.height / 10) + 10)
            on_press: root.popup()
            pos: root.width-((root.height / 10) + 10), root.height-((root.height / 10) + 10)
